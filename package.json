{
  "name": "stay-caffeinated",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "build:prod": "NODE_ENV=production next build",
    "build:optimize": "npm run build:prod && node scripts/optimize-build.js",
    "build:analyze": "ANALYZE=true NODE_ENV=production next build",
    "export": "next build",
    "start": "next start",
    "start:prod": "NODE_ENV=production next start",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "typecheck": "tsc --noEmit",
    "serve": "npx serve@latest out",
    "test": "NODE_OPTIONS='--max-old-space-size=4096' vitest run",
    "test:watch": "NODE_OPTIONS='--max-old-space-size=4096' vitest",
    "test:ui": "NODE_OPTIONS='--max-old-space-size=4096' vitest --ui",
    "test:coverage": "NODE_OPTIONS='--max-old-space-size=4096' vitest run --coverage",
    "test:coverage:ui": "NODE_OPTIONS='--max-old-space-size=4096' vitest --coverage --ui",
    "precommit": "npm run lint && npm run typecheck && npm run test",
    "prepare": "npm run build:prod"
  },
  "dependencies": {
    "@types/animejs": "^3.1.13",
    "animejs": "^4.1.3",
    "next": "15.5.3",
    "postcss": "^8.5.6",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@next/bundle-analyzer": "^15.5.3",
    "@tailwindcss/postcss": "^4.1.13",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9",
    "eslint-config-next": "15.5.3",
    "jsdom": "^27.0.0",
    "tailwindcss": "^4.1.13",
    "typescript": "^5",
    "vitest": "^3.2.4",
    "webpack-bundle-analyzer": "^4.10.2"
  }
}
