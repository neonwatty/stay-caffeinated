{
  "name": "stay-caffeinated",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "build:prod": "NODE_ENV=production next build",
    "build:optimize": "npm run build:prod && node scripts/optimize-build.js",
    "build:analyze": "ANALYZE=true NODE_ENV=production next build",
    "export": "next build",
    "start": "next start",
    "start:prod": "NODE_ENV=production next start",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "typecheck": "tsc --noEmit",
    "knip": "knip",
    "knip:production": "knip --production",
    "knip:watch": "knip --watch",
    "serve": "npx serve@latest out",
    "test": "NODE_OPTIONS='--max-old-space-size=4096' vitest run",
    "test:watch": "NODE_OPTIONS='--max-old-space-size=4096' vitest",
    "test:ui": "NODE_OPTIONS='--max-old-space-size=4096' vitest --ui",
    "test:coverage": "NODE_OPTIONS='--max-old-space-size=4096' vitest run --coverage",
    "test:coverage:ui": "NODE_OPTIONS='--max-old-space-size=4096' vitest --coverage --ui",
    "e2e": "playwright test",
    "e2e:headed": "playwright test --headed",
    "e2e:debug": "playwright test --debug",
    "e2e:ui": "playwright test --ui",
    "e2e:codegen": "playwright codegen",
    "e2e:report": "playwright show-report",
    "precommit": "npm run lint && npm run typecheck && npm run test",
    "prepare": "npm run build:prod"
  },
  "dependencies": {
    "@gsap/react": "^2.1.2",
    "@pixi/react": "^8.0.0-beta.25",
    "@types/animejs": "^3.1.13",
    "animejs": "^4.1.3",
    "framer-motion": "^12.23.22",
    "gsap": "^3.13.0",
    "konva": "^10.0.2",
    "next": "15.5.3",
    "pixi.js": "^8.13.2",
    "postcss": "^8.5.6",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-konva": "^19.0.10"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@eslint/eslintrc": "^3",
    "@playwright/experimental-ct-react": "^1.55.0",
    "@playwright/test": "^1.55.0",
    "@tailwindcss/postcss": "^4.1.13",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9",
    "eslint-config-next": "^15.5.4",
    "jsdom": "^27.0.0",
    "knip": "^5.64.3",
    "postcss-load-config": "^6.0.1",
    "tailwindcss": "^4.1.13",
    "typescript": "^5",
    "vitest": "^3.2.4",
    "webpack-bundle-analyzer": "^4.10.2"
  }
}
