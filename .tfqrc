{
  "database": {
    "path": "./.tfq/tfq.db"
  },
  "defaults": {
    "autoAdd": true,
    "parallel": 4
  },
  "claude": {
    "enabled": true,
    "dangerouslySkipPermissions": true,
    "verbose": true,
    "outputFormat": "stream-json",
    "maxIterations": 10,
    "testTimeout": 900000,
